<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="PerpetualEclipse.actionSet1"
            label="PerpetualEclipse.actionSet1"
            visible="true">
         <action
               class="perpetualeclipse.ActionDelegate"
               enablesFor="*"
               id="PerpetualEclipse.action1"
               label="Push Me"
               style="push"
               toolbarPath="foo"/>
      </actionSet>
   </extension>
   <extension
         id="perpetualRunner"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run class="perpetualeclipse.RunnerApplication"/>
      </application>
   </extension>

</plugin>
